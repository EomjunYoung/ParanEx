<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradation"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="kr.ac.ajou.paran.sss.main.Main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="5dp"
        android:paddingTop="15dp"
        android:layout_weight="8"
        android:orientation="horizontal"
        android:weightSum="100">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="75">
            <EditText
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/login_input_back"
                android:lines="1"
                android:hint="Please Enter Keyword"
                android:textColorHint="@color/login_input"
                android:textColor="@color/login_input"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/login_button"
                android:textColor="@color/login_white"
                android:textStyle="bold"
                android:text="입력"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/main_main_record"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="92">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/login_login_logo"
                android:layout_centerInParent="true"
                android:alpha="0.5"/>
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>